<div class="panel panel-default">
  <div class="panel-heading">
    <span> <i class="fa fa-usd" style = " color: #ffb400 " ></i> <%= @room.price %> </span>
    <span class="pull-right">Per Night</span>
  </div>
  <div class="panel-body">
    <%= form_for([@room, @room.reservations.new]) do |f| %>
      <label for="">Check In</label>
      <%= f.text_field :start_date, class: "form-control datepicker", readonly: true, placeholder: "Start Date"  %>
      <br/>
      <label for="">Check Out</label>
      <%= f.text_field :end_date, disabled: true, class: "form-control datepicker", readonly: true, placeholder: "End Date"  %>

      <div id="preview" style= "display:none">
        <table class="reservation-table">
          <tbody>
            <tr>
              <td>Price</td>
              <td class="text-right">$<%= @room.price%></td>
            </tr>
            <tr>
              <td>Night(s)</td>
              <td class="text-right">x <span id="reservation_days"></span></td>
            </tr>
            <tr>
              <td>Price</td>
              <td class="total"><1span id="reservation_total"></1span></td>
            </tr>
          </tbody>
        </table>
      </div>

      <br/>
      <%= f.submit "Book Now", class: "btn btn-normal btn-block" %>
    <% end %>

  </div>
</div>



<script>
  $(function() {
    $('#reservation_start_date').datepicker({
      dateFormat: 'dd-mm-yy'
    });
    $('#reservation_end_date').datepicker({
      dateFormat: 'dd-mm-yy'
    });
  });
</script>
